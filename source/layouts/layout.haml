        Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.

    .container
      #main-content{ role: "main" }
        - if current_page.url == '/'
          %aside.left
            .bottom
              %p.name= link_to 'Tom Dooner', '/'
              %p.title
                Software Engineer
                %a.company{ href: 'https://www.brigade.com', target: '_blank' } Brigade

        .right
          - unless current_page.url == '/'
            = link_to '/', class: 'back-to-blog' do
              %i.fa.fa-long-arrow-left
              Back to Blog

          %h1= current_page.data.title
          %h2= current_page.data.subtitle

          = yield

