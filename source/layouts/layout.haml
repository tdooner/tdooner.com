  %head
    %meta{ charset: 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible',  content: 'IE=edge'  }
    %title= current_page.data.title + " | Tom Dooner"
    %meta{ name: 'description', content: current_page.data.subtitle }
    %meta{ name: 'author', content: 'Tom Dooner' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = partial 'layouts/_og_tags.haml'
    = feed_tag :atom, '/feed.xml', title: 'Atom Feed'
    = feed_tag :rss, '/rss.xml', title: 'RSS 2.0 Feed'
    = stylesheet_link_tag "screen"
    = javascript_include_tag "all"

  %body{ class: current_page.data.bodyclass }
